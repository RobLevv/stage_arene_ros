      <geometry>
        <box size="0.05 0.05 0.005"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia  ixx="0.0001" ixy="0" ixz="0"
                iyy="0.0001" iyz="0"
                izz="0.0001" />
    </inertial>
  </link>

  <link name="motor_2">
    <inertial>

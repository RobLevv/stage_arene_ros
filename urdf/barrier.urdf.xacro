      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia  ixx="0.01" ixy="0" ixz="0"
                iyy="0.01" iyz="0"
                izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.037 0.02"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="0.04 0.037 0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_to_motor_2" type="fixed">
    <parent link="base_link_2"/>
    <child link="motor_2"/>
    <origin xyz="0 0 0.0125" rpy="0 0 0"/>
  </joint>

  <link name="gear_2">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
              iyy="0.01" iyz="0"
              izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0.01 0.021 0" rpy="-1.57 3.14 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.005"/>
      </geometry>
    </collision>
    <visual>
        <geometry>
            <cylinder radius="0.01" length="0.005"/>
        </geometry>
    </visual>
  </link>

  <joint name="motor_to_gear_2" type="fixed">
      <parent link="motor_2"/>
      <child link="gear_2"/>
      <origin xyz="0.01 0.021 0" rpy="-1.57 3.14 0"/>
  </joint>

  <link name="barrier_2">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
              iyy="0.01" iyz="0"
              izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0.09 0.02 0.0005" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.06 0.001"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.09 0.02 0.0005" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.06 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="gear_to_barrier_2" type="revolute">
      <limit upper="1.57" lower="0" velocity="100" effort="100"/>
      <origin xyz="0 0 0.0025 " rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <parent link="gear_2"/>
      <child link="barrier_2"/>
      <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/barrier_2</robotNamespace>
    </plugin>
  </gazebo>

  <transmission name="gear_to_barrier_2_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor1">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="gear_to_barrier_2">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <gazebo reference="base_link_2">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="motor_2">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="gear_2">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="barrier_2">
    <material>Gazebo/Yellow</material>
  </gazebo>

</robot>

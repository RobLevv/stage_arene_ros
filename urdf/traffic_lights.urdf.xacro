<?xml version="1.0" ?>
<robot name="traffic_lights" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find turtlebot3_description)/urdf/common_properties.xacro"/>
    <xacro:include filename="$(find stage_arene_ros)/urdf/traffic_lights.gazebo.xacro"/>

    <link name="world"/>

    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="1.57 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.1 0.03 0.005"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.001" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.029 0.0049"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0"
                     iyy="0.0001" iyz="0"
                     izz="0.0001" />
        </inertial>
    </link>

    <xacro:macro name="light" params="color pos">
        <link name="light_${color}">
            <visual>
                <geometry>
                    <cylinder length="0.003" radius="0.009"/>
                </geometry>
                <material name="${color}"/>
            </visual>
            <!-- <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder length="0.003" radius="0.005"/>
                </geometry>
            </collision> -->
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="0.0001" ixy="0" ixz="0"
                         iyy="0.0001" iyz="0"
                         izz="0.0001" />
            </inertial>
        </link>
        <joint name="base_to_light_${color}" type="prismatic">
            <parent link="base_link"/>
            <child link="light_${color}"/>
            <origin xyz="${pos} 0.0 0.0" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
            <limit lower="0.0" upper="0.002" effort="1000.0" velocity="1000.0"/>
            <dynamics damping="0.0" friction="0.1"/>
        </joint>
    </xacro:macro>

    <xacro:light color="red" pos="${-1/30}"/>
    <xacro:light color="orange" pos="0.0"/>
    <xacro:light color="green" pos="${1/30}"/>

</robot>
<?xml version="1.0" ?>
<robot name="barrier" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find turtlebot3_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find stage_arene_ros)/urdf/barrier.gazebo.xacro"/>
  
  <link name="world"/>

  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.001" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
        <geometry>
          <box size="0.05 0.05 0.005"/>
        </geometry>
        <material name="white"/>
      </visual>

    <collision>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.005"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0"
               izz="0.0001" />
    </inertial>
  </link>

  <link name="motor">
      <inertial>
          <mass value="0.1"/>
          <origin xyz="0 0 0"/>
          <inertia ixx="0.01" ixy="0" ixz="0"
                   iyy="0.01" iyz="0"
                   izz="0.01" />
      </inertial>
      <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
              <box size="0.04 0.037 0.02"/>
          </geometry>
      </collision>
      <visual>
            <geometry>
                <box size="0.04 0.037 0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
  </link>

  <joint name="base_to_motor" type="fixed">
      <parent link="base_link"/>
      <child link="motor"/>
      <origin xyz="0 0 0.0125"/>
  </joint>

  <link name="gear">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.005"/>
      </geometry>
    </collision>
    <visual>
        <geometry>
            <cylinder radius="0.01" length="0.005"/>
        </geometry>
        <material name="gray"/>
    </visual>
  </link>

  <joint name="motor_to_gear" type="fixed">
      <parent link="motor"/>
      <child link="gear"/>
      <origin xyz="0.01 0.021 0.0" rpy="-1.57 3.14 0"/>
  </joint>

  <link name="barrier">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0.09 0.02 0.0005" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.06 0.001"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.09 0.02 0.0005" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.06 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
  </link>

  <joint name="gear_to_$(arg model_name)" type="revolute">
      <limit upper="1.57" lower="0" velocity="100" effort="100"/>
      <origin xyz="0 0 0.0025"/>
      <axis xyz="0 0 1"/>
      <parent link="gear"/>
      <child link="barrier"/>
      <dynamics damping="0.1" friction="0.1"/>
  </joint>

  
</robot>
